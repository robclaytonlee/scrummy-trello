<h1>Listing cards</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Trello</th>
      <th>Url</th>
      <th>Board</th>
      <th>Points</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @cards.each do |card| %>
      <tr>
        <td><%= card.title %></td>
        <td><%= card.trello_id %></td>
        <td><%= card.url %></td>
        <td><%= card.board_id %></td>
        <td><%= card.points %></td>
        <td><%= link_to 'Show', card %></td>
        <td><%= link_to 'Edit', edit_card_path(card) %></td>
        <td><%= link_to 'Destroy', card, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Card', new_card_path %>
