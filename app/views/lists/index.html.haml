#page-wrapper
  = render 'page_title', :title => 'Trello Boards'
  .row
    .col-md-12
      .table-responsive
        %table.table.table-striped.table-bordered.table-hover
          %thead
            %tr
              %th Trello
              %th Name
              %th Closed
              %th Position
              %th
              %th
              %th

          %tbody
          - @lists.each do |list|
            %tr
              %td= list.trello_id
              %td= list.name
              %td= list.closed
              %td= list.position
              %td= link_to 'Show', list
              %td= link_to 'Edit', edit_list_path(list)
              %td= link_to 'Destroy', list, :method => :delete, :data => { :confirm => 'Are you sure?' }

  %br
  .row
    = link_to 'New List', new_list_path
