= form_for @list do |f|
  - if @list.errors.any?
    #error_explanation
      %h2= "#{pluralize(@list.errors.count, "error")} prohibited this list from being saved:"
      %ul
        - @list.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :trello_id
    = f.text_field :trello_id
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :closed
    = f.text_field :closed
  .field
    = f.label :position
    = f.text_field :position
  .actions
    = f.submit 'Save'
